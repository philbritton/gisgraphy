<component>
	<id>default</id>
	<formats>
		<!--<format>tar.gz</format>-->
		<!-- format>tar.bz2</format-->
		<format>zip</format>
	</formats>
	<fileSets>
		<!-- default files -->
		<fileSet>
			<directory>src/dist</directory>
			<outputDirectory></outputDirectory>
			<includes>
			<include>data/**</include>
			<include>docs/**</include>
			<include>etc/**</include>
			<include>lib/**</include>
			<include>logs/**</include>
			<include>solr/**</include>
			<include>sql/**</include>
			<include>webapps/**</include>
			<include>README*</include>
			<include>launch.command</include>
			<include>launch.txt</include>
			<include>launch.bat</include>
			<include>*.sh</include>
			<include>debug.sh</include>
			<include>start.jar</include>
			<include>migrationguide</include>
			<include>installpostgresAndPostgis.sh</include>
			</includes>
		</fileSet>
		<!-- license -->
		<fileSet>
			<includes>
				<include>LICENSE*</include>
			</includes>
		</fileSet>
		<!-- sql files -->
		<fileSet>
			<directory>src/sql</directory>
			<outputDirectory>sql/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>target/hibernate3/sql</directory>
			<outputDirectory>sql/</outputDirectory>
		</fileSet>
		<!-- SolR config files -->
		<fileSet>
			<directory>src/main/resources</directory>
			<outputDirectory>solr/conf</outputDirectory>
			<includes>
				<include>xslt/**.xsl</include>
				<include>admin-extra.html</include>
				<include>schema.xml</include>
				<include>solrconfig.xml</include>
				<include>protwords.txt</include>
				<include>scripts.conf</include>
				<include>stopwords.txt</include>
				<include>synonyms.txt</include>
			</includes>
		</fileSet>
		<!-- doc -->
		<fileSet>
			<directory>src/site/resources/documentation</directory>
			<outputDirectory>docs/user_guide</outputDirectory>
			<includes>
				<include>addressparser.htm</include>
				<include>user-guide.htm</include>
				<include>quick-start.htm</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/site/resources/documentation/installation</directory>
			<outputDirectory>docs/user_guide/installation</outputDirectory>
			<includes>
				<include>**/*.html</include>
				<include>**/*.htm</include>
				<include>**/*.jpg</include>
				<include>**/*.gif</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/skin/src/main/resources/css</directory>
			<outputDirectory>docs/user_guide/css</outputDirectory>
			<includes>
				<include>*.css</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/site/resources/images</directory>
			<outputDirectory>docs/images</outputDirectory>
			<includes>
				<include>placetype.png</include>
				<include>opensearch/**</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/site/resources/images/screenshots/</directory>
			<outputDirectory>docs/images/screenshots</outputDirectory>
			<includes>
				<include>*.jpg</include>
			</includes>
		</fileSet>
		<!--client-->
		<fileSet>
			<directory>src/main/python/client/</directory>
			<outputDirectory>client/python/</outputDirectory>
			<includes>
				<include>*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/php/client/</directory>
			<outputDirectory>client/php/</outputDirectory>
			<includes>
				<include>*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/webapp/scripts/</directory>
			<outputDirectory>client/javascript/</outputDirectory>
			<includes>
				<include>gisgraphyapi.js</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>target/site/apidocs</directory>
			<outputDirectory>docs/apidocs</outputDirectory>
		</fileSet>
		<!-- data -->
		<fileSet>
			<directory>data/import</directory>
			<outputDirectory>data/import</outputDirectory>
			<includes>
				<include>**</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>target/${pom.name}-${pom.version}</directory>
			<outputDirectory>webapps/ROOT</outputDirectory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>data/libs</directory>
			<outputDirectory>webapps/ROOT/WEB-INF/lib</outputDirectory>
			<includes>
				<include>**</include>
			</includes>
		</fileSet>
	</fileSets>
	<!-- gisgraphy webapp -->
	<files>
	</files>
</component>
